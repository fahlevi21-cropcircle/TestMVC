@{
}

@model TestMVC.Models.Product

<form asp-action="Form" method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <input type="hidden" asp-for="Id" value="@(Model?.Id ?? 0)" />

    <div class="form-group mb-3">
        <label class="form-label" asp-for="Name">Name</label>
        <input class="form-control" asp-for="Name"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label class="form-label" asp-for="Description">Description</label>
        <textarea class="form-control" asp-for="Description" rows="3"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label class="form-label" asp-for="Price">Price</label>
        <input class="form-control" asp-for="Price" type="number" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="d-flex gap-2">
        <a class="btn btn-secondary" asp-action="Index">Back</a>
        <button class="btn btn-primary" type="submit">Save</button>
    </div>
</form>
